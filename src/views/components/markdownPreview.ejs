<div class="mb-8 relative group">
    <label
        class="absolute -top-3 left-4 bg-white px-2 text-xs font-bold text-red-600 tracking-wider uppercase border border-white rounded-full">
        Preview (Real-Time markdown format)
    </label>
    <div id="md-preview"
        class="w-full px-5 py-5 min-h-[100px] bg-gray-50 border border-gray-200 rounded-xl text-sm prose prose-sm prose-red max-w-none">
        <%- item.htmlPreview %>
    </div>

    <div id="md-warning" class="hidden mt-3 px-4 py-3 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                </path>
            </svg>
            <div id="md-warning-text" class="text-xs text-red-700 font-medium leading-relaxed">
            </div>
        </div>
    </div>
</div>